doctype html
html(lang="en")

  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title

    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

  body.text-white(style="background-color: #96C3CE; font-family: verdana;")
    main#fundtransferVue(role="main" class="container")
      div
        h1.text-white.text-center.mt-3.mb-3.font-weight-bold B l a c k 4 uWallet
      include includes/headerButtons.pug

      .container.col-8.mt-4
        h2.font-weight-bold Fund Transfer
      .container.col-7.mt-5
        .col-9
          form(action="/transfer" method="POST")
          .form-group
            label Account Number
            input.form-control(type="text" name="account_number" v-model="account_number")
          .form-group
            label Amount
            input.form-control(type="number" name="amount" v-model="amount")
          .form-group
            button.btn.btn-success.float-right(type="button" v-on:click="sendFunds") Send

script(src="/axios.min.js")
script(src="/vue.js")
script(src="/scripts/transfer-vue.js")
 
      




            